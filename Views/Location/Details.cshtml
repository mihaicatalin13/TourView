@model Location
@{
    ViewData["title"] = "TourView - Location Details";
}
@if (TempData.Peek("message") != null)
{
    <div class="alert alert-info">
        @TempData.Peek("message")
    </div>
}
<h2>@Model.Name</h2>

<div>
    <h4>Address:</h4>
    <p>@Model.Address</p>
</div>
<div>
    <h4>Phone Number:</h4>
    <p>@Model.PhoneNumber</p>
</div>
<div>
    <h4>Schedule:</h4>
    <p>@Model.Schedule</p>
</div>
<div>
    <h4>Menu:</h4>
    <p>@Model.Menu</p>
</div>
@if (Model.PhotoUrl != null)
{
    <div>
        <h4>Photo:</h4>
        <img src="@Model.PhotoUrl" alt=" no photo yet" width="400px"/>
    </div>
}
<a asp-controller="Review" asp-action="Index" asp-route-locationId="@Model.Id">View Reviews</a>
@if (User.Identity.Name == ViewBag.managerName)
{
    <div></div>
    <a asp-controller="Location" asp-action="Edit" asp-route-Id="@Model.Id">Edit Your Location</a>
    <a asp-controller="Location" asp-action="Delete" asp-route-Id="@Model.Id">Delete your location</a>
    
}
else
{
    <a asp-controller="Reservation" asp-action="Index" asp-route-locationId="@Model.Id">Make a Reservation</a>
}

