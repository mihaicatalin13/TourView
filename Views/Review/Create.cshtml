@model Review
@{
    ViewData["title"] = "TourView - Add your Review";
}

<h2>Add Review for @ViewData["location"]</h2>


<form method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="LocationId" value="@ViewData["locationId"]" hidden></label>
    </div>
    <div>
        <label asp-for="Comment">Comment</label>
        <input asp-for="Comment" />
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Rating">Rating</label>
        <input asp-for="Rating" type="number" min="1" max="5" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <input asp-for="LocationId" type="hidden" />
    <button type="submit">Submit</button>
    <a asp-controller="Review" asp-action="Index" asp-route-locationId="@ViewData["locationId"]">Back to all reviews of @ViewData["location"]</a>
</form>
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}